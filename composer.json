{
  "name": "ninjify/nunjuck",
  "description": "Special tuned version of nette/tester for your PHP projects",
  "keywords": ["tester", "php", "nette"],
  "type": "library",
  "license": ["MIT"],
  "homepage": "https://github.com/ninjify/nunjuck",
  "authors": [
    {
      "name": "Milan Felix Sulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">=5.6",
    "nette/tester": "~2.0.0"
  },
  "require-dev": {
    "ninjify/qa": "^0.4.0"
  },
  "suggest": {
    "mockery/mockery": "to use BaseMockeryTestCase",
    "janmarek/mockista": "to use BaseMockistaTestCase",
    "nette/di": "to use BaseContainerTestCase"
  },
  "bin": [
    "bin/nunjuck",
    "bin/nunjuck-setup"
  ],
  "autoload": {
    "psr-4": {
      "Ninjify\\Nunjuck\\": "src"
    },
    "files": [
      "bin/functions.php"
    ]
  },
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tester": [
      "tester -s -p php --colors 1 tests/cases"
    ],
    "tester-coverage": [
      "tester -s -p php --colors 1 -d extension=xdebug.so --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ]
  }
}
